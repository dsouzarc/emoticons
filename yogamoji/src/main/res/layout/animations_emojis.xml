<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_animation">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Animations"
        android:id="@+id/viewAnimations"
        style="@android:style/Widget.DeviceDefault.Light.Button"
        android:clickable="true"
        android:background="@drawable/background_animation"
        android:gravity="center_vertical|center_horizontal" android:layout_centerInParent="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/theScrollView">
    </ScrollView>
</RelativeLayout>